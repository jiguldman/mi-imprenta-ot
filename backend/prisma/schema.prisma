generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Trabajo {
  BORDADO
  ESTAMPADO
  DTF
  LASER_FIBRA
  LASER_CORTE
  SUBLIMACION
}

enum Estado {
  RECEPCION
  BORDADO
  ESTAMPADO
  DTF
  LASER_FIBRA
  LASER_CORTE
  SUBLIMACION
  LIMPIEZA_EMPAQUE
  DESPACHO
  FACTURACION
}

enum Rol {
  OPERARIO
  SUPERVISOR
  ADMIN
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  nombre    String
  rol       Rol      @default(OPERARIO)
  createdAt DateTime @default(now())
  cambios   CambioOT[]
  comentarios ComentarioOT[]
}

model Cliente {
  id        Int      @id @default(autoincrement())
  nombre    String
  rut       String   @unique
  telefono  String?
  createdAt DateTime @default(now())
  ots       OT[]
}

model OT {
  id                    Int      @id @default(autoincrement())
  numero                String   @unique
  clienteId             Int
  producto              String
  cantidad              Int
  trabajo               Trabajo
  bultosRecibidos       Int?
  fotoRecepcion1        String?
  fotoRecepcion2        String?
  estado                Estado   @default(RECEPCION)
  fechaCreacion         DateTime @default(now())
  fechaEntregaPrometida DateTime
  historial             CambioOT[]
  comentarios           ComentarioOT[]
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  cliente Cliente @relation(fields: [clienteId], references: [id])
}

model CambioOT {
  id        Int      @id @default(autoincrement())
  otId      Int
  usuarioId Int
  estado    Estado
  nota      String?
  createdAt DateTime @default(now())

  ot      OT      @relation(fields: [otId], references: [id], onDelete: Cascade)
  usuario Usuario @relation(fields: [usuarioId], references: [id])
}

model ComentarioOT {
  id        Int      @id @default(autoincrement())
  otId      Int
  usuarioId Int
  texto     String
  createdAt DateTime @default(now())

  ot      OT      @relation(fields: [otId], references: [id], onDelete: Cascade)
  usuario Usuario @relation(fields: [usuarioId], references: [id])
}